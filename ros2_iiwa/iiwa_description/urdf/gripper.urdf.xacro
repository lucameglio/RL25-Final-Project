<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="parallel_gripper" params="parent prefix">

    <link name="${prefix}gripper_base">
      <visual>
        <origin xyz="0 0 -0.20" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/gripper/visual/gripper_base.stl"
                scale="0.015 0.015 0.03"/>
        </geometry>
        <material name="grey">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <visual>
        <origin xyz="0 0 -0.20" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/gripper/visual/gripper_attack.stl"
                scale="0.03 0.03 0.03"/>
        </geometry>
        <material name="grey">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 -0.20" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/gripper/visual/gripper_base.stl"
                scale="0.015 0.015 0.03"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 0 -0.20" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/gripper/visual/gripper_attack.stl"
                scale="0.03 0.03 0.03"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 -0.20" rpy="0 0 0"/>
        <mass value="0.3"/>
        <inertia ixx="1e-4" ixy="0" ixz="0"
                 iyy="1e-4" iyz="0"
                 izz="1e-4"/>
      </inertial>
    </link>

    <joint name="${prefix}gripper_mount" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}gripper_base"/>
      <origin xyz="0 0 0.195" rpy="0 0 0"/>
    </joint>

    <link name="${prefix}left_finger">
      <visual>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/gripper/visual/left_finger.stl"
                scale="0.03 0.03 0.03"/>
        </geometry>
        <material name="grey"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/gripper/collision/left_finger_collision.stl"
                scale="0.03 0.03 0.03"/>
        </geometry>
          <surface>
          <friction>
            <ode>
              <mu>5.0</mu>
              <mu2>5.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <inertia ixx="0.0001" ixy="0" ixz="0"
                 iyy="0.0001" iyz="0"
                 izz="0.0001"/>
      </inertial>
    </link>

    <joint name="${prefix}joint_a8_left_finger_joint" type="prismatic">
      <parent link="${prefix}gripper_base"/>
      <child link="${prefix}left_finger"/>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.001" upper="0.15" effort="200" velocity="0.2"/>
    </joint>

    <link name="${prefix}right_finger">
      <visual>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/gripper/visual/right_finger.stl"
                scale="0.03 0.03 0.03"/>
        </geometry>
        <material name="grey"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/gripper/collision/right_finger_collision.stl"
                scale="0.03 0.03 0.03"/>
        </geometry>
          <surface>
          <friction>
            <ode>
              <mu>5.0</mu>
              <mu2>5.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.0001" ixy="0" ixz="0"
                 iyy="0.0001" iyz="0"
                 izz="0.0001"/>
      </inertial>
    </link>

    <joint name="${prefix}joint_a8_right_finger_joint" type="prismatic">
      <parent link="${prefix}gripper_base"/>
      <child link="${prefix}right_finger"/>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit lower="-0.001" upper="0.15" effort="200" velocity="0.2"/>
    </joint>

  </xacro:macro>

</robot>
